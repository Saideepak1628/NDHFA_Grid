<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CsvGridApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="20"
            VerticalOptions="Start">

            <!-- Title -->
            <Label
                Text="CSV Grid Viewer"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,10,0,20" />

            <!-- CSV Data Grid -->
            <CollectionView x:Name="CsvGrid"
                            SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="Auto,Auto,Auto">
                            <Label Text="{Binding Col1}" Margin="5"/>
                            <Label Text="{Binding Col2}" Margin="5"/>
                            <Label Text="{Binding Col3}" Margin="5"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
